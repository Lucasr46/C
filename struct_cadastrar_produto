#include <stdio.h>

typedef struct produto{
    int codigo;
    char nome [100];
    float preco;

}Produto;

int main()
{
   Produto p;

   //entrada
   
   printf("Digite o nome do produto: ");
   scanf("%s", p.nome);
   
   printf("Digite o codigo do produto: ");
   scanf("%d", &p.codigo);
   
   printf("Digite o preço do produto: ");
   scanf("%f",&p.preco);

   //saida
   printf("\nProduto %s cadastrado com sucesso!\nCódigo do produto: %d\nPreço do produto: R$%.f", p.nome, p.codigo, p.preco);

   return 0;
}
